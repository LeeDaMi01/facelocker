<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 블루투스 통신 권한 설정 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 블루투스 권한 얻어오기 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- android 9 이하 블루투스 권한 얻어오기 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- android 9 이후 블루투스 권한 얻어오기 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 블루투스 연결 권한 얻어오기 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- 위치데이터 권한 가져오기 BACKGROUND 에서도 작동될수있게 (앱이 꺼져있어도 작동할수 있게 얻어오는것 인데 일단 쓸지 안쓸지 모르니 주석처리 -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />  -->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flocker"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".first"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".log"
            android:exported="true">
        </activity>
        <activity
            android:name=".locker"
            android:exported="true"
            android:parentActivityName=".main">
        </activity>
        <!-- SettingActivity 빨간색떠있어도 무시 잘 작동함 -->
        <activity
            android:name=".SettingActivity"
            android:exported="true"
            android:parentActivityName=".main">
        </activity>

        <activity
            android:name=".main"
            android:exported="true">
        </activity>
        <activity
            android:name=".login"
            android:exported="true"
            android:parentActivityName=".main">
        </activity>
        <activity
            android:name=".quit"
            android:exported="true"
            android:parentActivityName=".main">
        </activity>
        <activity
            android:name="quit_check"
            android:exported="true">
        </activity>
    </application>

</manifest>